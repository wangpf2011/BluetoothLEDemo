<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <include layout="@layout/ble_connect_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_ble_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:text="BLE Name： xxxx"/>
        <TextView
            android:id="@+id/txt_ble_mac"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:text="BLE MAC： xx.xx.xx.xx"/>
        <TextView
            android:id="@+id/txt_ble_status"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:text="BLE Status： disconnect"/>
    </LinearLayout>

    <View style="@style/grid_line_horizontal"/>

    <EditText
        android:id="@+id/txt_realdata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edittext"
        android:inputType="textMultiLine"
        android:minLines="10"
        android:gravity="left|top"
        android:textSize="14sp"
        android:textColor="@color/grayslate"/>

    <View style="@style/grid_line_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_read_realdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/ble_read_realdata" />

        <Button
            android:id="@+id/btn_clear_realdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/ble_clear_realdata" />
    </LinearLayout>
</LinearLayout>

